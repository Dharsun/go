def search_in_zip(zip_filename, keyword_patterns):
    results = {keyword: [] for keyword in keyword_patterns.keys()}
    
    with zipfile.ZipFile(zip_filename, 'r') as zip_ref:
        for file_info in zip_ref.infolist():
            with zip_ref.open(file_info) as file:
                try:
                    content = file.read().decode('utf-8')
                    is_binary = False
                except UnicodeDecodeError:
                    content = file.read()
                    is_binary = True
                for keyword, pattern in keyword_patterns.items():
                    if is_binary:
                        matches = re.findall(pattern.encode(), content, re.IGNORECASE)
                    else:
                        matches = re.findall(pattern, content, re.IGNORECASE)
                    if matches:
                        results[keyword].extend([(match.decode() if is_binary else match, file_info.filename) for match in matches])
    
    return results
